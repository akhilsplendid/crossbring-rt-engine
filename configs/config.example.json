{
  "queue_capacity": 2048,
  "workers": 4,
  "backpressure": "block",
  "sources": {
    "sensors": [
      { "name": "temp", "period_ms": 50 },
      { "name": "rpm", "period_ms": 75 }
    ],
    "file_json": [
      { "source": "af_jobs", "path": "data/af_jobs.json", "interval_ms": 2000 }
    ]
  },
  "sinks": {
    "console": true,
    "sqlite": { "enabled": false, "path": "data/events.sqlite" },
    "batching": { "enabled": false, "batch_size": 32, "flush_ms": 200 }
  },
  "http": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 9100,
    "recent_capacity": 500
  }
}
